<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.pampam.wakemeup.ui.MainActivityViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapFragmentView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".MapsActivity" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/myLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/show_me"
                android:longClickable="false"
                android:src="@drawable/ic_baseline_near_me_24"
                android:tint="@{viewModel.isFocused ? @color/colorPrimary : @color/colorIco_neutral}"
                app:backgroundTint="@color/colorCard_0"
                app:fabCustomSize="50dp"
                app:fabSize="normal"
                app:layout_constraintBottom_toTopOf="@+id/searchBar"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/searchBar"
                style="@style/MaterialSearchBarLight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:hapticFeedbackEnabled="true"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:mt_backIconTint="@color/colorIco_neutral"
                app:mt_borderlessRippleEnabled="false"
                app:mt_clearIconTint="@color/colorIco_neutral"
                app:mt_hint="ДК &quot; Металлург &quot;"
                app:mt_maxSuggestionsCount="10"
                app:mt_placeholder="Введите название остановки"
                app:mt_placeholderColor="@color/colorText_neutral"
                app:mt_roundedSearchBarEnabled="true"
                app:mt_searchBarColor="@color/colorCard_0"
                app:mt_searchIconTint="@color/colorIco_neutral"
                app:mt_speechMode="false"
                tools:visibility="visible">

            </com.mancj.materialsearchbar.MaterialSearchBar>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</layout>