<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.pampam.wakemeup.ui.MainActivityViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapFragmentView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".MapsActivity" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controlsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/myLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/show_me"
                android:longClickable="false"
                android:src="@drawable/ic_baseline_near_me_24"
                app:backgroundTint="?attr/colorBackgroundFloating"
                app:fabCustomSize="50dp"
                app:layout_constraintBottom_toTopOf="@id/searchDetailsLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="?attr/colorControlNormal" />

            <FrameLayout
                android:id="@+id/searchDetailsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/detailsCardView"
                    android:name="com.pampam.wakemeup.ui.SessionDetailsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/session_details" />

                <com.mancj.materialsearchbar.MaterialSearchBar
                    android:id="@+id/searchBar"
                    style="@style/MaterialSearchBarDayNight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:clipToPadding="false"
                    android:hapticFeedbackEnabled="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="24dp"
                    android:visibility="@{viewModel.currentSession != null ? View.GONE : View.VISIBLE}"
                    app:mt_backIconTint="?attr/colorControlNormal"
                    app:mt_borderlessRippleEnabled="false"
                    app:mt_clearIconTint="?attr/colorControlNormal"
                    app:mt_hint="ДК &quot; Металлург &quot;"
                    app:mt_maxSuggestionsCount="10"
                    app:mt_placeholder="Введите название остановки"
                    app:mt_roundedSearchBarEnabled="true"
                    app:mt_searchIconTint="?attr/colorControlNormal"
                    app:mt_speechMode="false"
                    app:mt_suggestionsAnimationSpeed="200">

                </com.mancj.materialsearchbar.MaterialSearchBar>
            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</layout>